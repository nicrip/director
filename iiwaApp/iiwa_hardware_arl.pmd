
group "0.bot-lcm-tunnel" {

  cmd "0.remote-bot-tunnel" {
    exec = "ssh -t harvardkuka code/kuka-dev/drake/build/install/bin/bot-lcm-tunnel";
    host = "localhost";
  }

  cmd "1.local-bot-tunnel" {
    exec = "$DRAKE_BASE/build/install/bin/bot-lcm-tunnel 10.245.32.28";
    host = "localhost";
  }

  cmd "2.remote deputy" {
    exec = "ssh -t harvardkuka code/kuka-dev/drake/build/install/bin/bot-procman-deputy -n harvardkuka";
    host = "localhost";
  }
}

group "1.vision-drivers" {


  cmd "0.openni-driver" {
    exec = "$DIRECTOR_BUILD/install/bin/openni2-camera-lcm";
    host = "localhost";
  }

  cmd "0.apriltag-driver" {
    exec = "$DIRECTOR_BUILD/install/bin/drc-apriltags-driver --quiet=true --window=false --config=tri_iiwa_apriltags.yaml";
    host = "localhost";
  }

}

group "2.iiwa-drivers" {

  cmd "0.kuka-driver" {
    exec = "LD_LIBRARY_PATH=code/kuka-dev/iiwa-driver/build/lib code/kuka-dev/iiwa-driver/build/kuka_driver";
    host = "harvardkuka";
  }

  cmd "1.plan-runner" {
    exec = "code/kuka-dev/drake/build/drake/examples/kuka_iiwa_arm/kuka_plan_runner";
    host = "harvardkuka";
  }

  cmd "1.kuka-control" {
    exec = "code/kuka-dev/drake/build/drake/examples/kuka_iiwa_arm/kuka_control";
    host = "harvardkuka";
  }

  cmd "2.state-translator" {
    exec = "DRC_BASE=/none DISPLAY=:0 code/kuka-dev/drake/build/install/bin/directorPython code/kuka-dev/drake/drake/examples/kuka_iiwa_arm/kuka_iiwa_state_translator.py --director_config code/kuka-dev/drake/drake/examples/kuka_iiwa_arm/director_config.json";
    host = "harvardkuka";
  }
}

group "3.schunk-driver" {

  cmd "0.schunk-driver" {
    exec = "LD_LIBRARY_PATH=drake-schunk-driver/build/lib drake-schunk-driver/build/schunk_driver";
    host = "harvardkuka";
  }
}

cmd "4.director-ik-app" {
  exec = "$DIRECTOR_BUILD/install/bin/directorPython -m director.mainwindowapp --startup iiwaManipApp.py  --director_config $DRAKE_BASE/drake/examples/kuka_iiwa_arm/director_config.json -c iiwaManip.cfg";
  host = "localhost";
}

cmd "5.bot-spy" {
  exec = "bash -c 'cd $DRAKE_BASE; ./my-bot-spy'";
  host = "localhost";
}

cmd "6.signal-scope" {
  exec = "$DRAKE_BASE/build/install/bin/signal-scope $DRAKE_BASE/drake/examples/kuka_iiwa_arm/kuka_iiwa_signal_scope.py ";
  host = "localhost";
}


